<Page x:Class="HotelManagementSystem.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelManagementSystem.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Sky View Hotel Management">

    <StackPanel Orientation="Vertical" Background="{StaticResource BackgroundBrush}" >
        <Image  Source="../Images/home.jpg" Height="240" Width="480"  Stretch="Fill" HorizontalAlignment="Left"/>
        <TextBlock Text="Welcome to" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource OnBackgroundBrush}" Margin="0,24,0,0"/>
        <TextBlock Text="Sky View Hotel" FontSize="36" FontWeight="Bold" Foreground="{StaticResource OnBackgroundBrush}"/>
    </StackPanel>
</Page>
